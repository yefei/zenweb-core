{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2019",
    "lib": [ "ES2019" ],
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": false,
    "newLine": "lf",
    "outDir": "./dist"
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*" ]
}